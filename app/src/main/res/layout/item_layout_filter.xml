<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/dimen8"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_filter_type"
        style="@style/MediumHeading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:minHeight="@dimen/dimen40"
        tools:drawableStartCompat="@drawable/ic_arrow_up" />

    <TextView
        android:id="@+id/tv_filter_name"
        style="@style/MediumHeading"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:gravity="center_vertical"
        android:textStyle="normal"
        tools:text="Alphabetically" />

</LinearLayout>