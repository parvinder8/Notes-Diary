<resources>
    <!-- Base application theme. -->
    <style name="Theme.NotesDiary" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="NotesDiary" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/blue_100</item>

        <item name="colorSecondary">@color/light_grey</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/blue_100</item>

        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorErrorContainer">@color/light_peach</item>
    </style>


    <!-- EditView Search -->
    <style name="SearchEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/et_round_black_border</item>
        <item name="android:padding">@dimen/dimen6</item>
        <item name="android:layout_marginStart">@dimen/dimen8</item>
        <item name="android:layout_marginEnd">@dimen/dimen8</item>
        <item name="android:drawableStart">@drawable/ic_search_black</item>
        <item name="android:paddingEnd">@dimen/dimen12</item>
        <item name="android:paddingStart">@dimen/dimen8</item>
        <item name="android:drawableEnd">@drawable/ic_filter_black</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:maxLines">1</item>
    </style>
</resources>