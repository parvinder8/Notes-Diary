<resources>

    <style name="NotesDiary" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/blue_100</item>

        <item name="colorSecondary">@color/light_grey</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/blue_100</item>

        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorErrorContainer">@color/light_peach</item>
    </style>


    <!-- EditView Search -->
    <style name="SearchEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/et_round_black_border</item>
        <item name="android:padding">@dimen/dimen6</item>
        <item name="android:layout_marginStart">@dimen/start_margin</item>
        <item name="android:layout_marginEnd">@dimen/end_margin</item>
        <item name="android:drawableStart">@drawable/ic_search_black</item>
        <item name="android:paddingEnd">@dimen/dimen12</item>
        <item name="android:paddingStart">@dimen/dimen8</item>
        <item name="android:drawableEnd">@drawable/ic_filter_black</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:maxLines">1</item>
    </style>


    <style name="AppHeading" parent="Widget.AppCompat.TextView">
        <item name="android:paddingStart">@dimen/item_padding</item>
        <item name="android:paddingEnd">@dimen/item_padding</item>
        <item name="android:textSize">28sp</item>
        <item name="android:layout_marginStart">@dimen/start_margin</item>
        <item name="android:layout_marginEnd">@dimen/end_margin</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MediumHeading" parent="Widget.AppCompat.TextView">
        <item name="android:paddingStart">@dimen/dimen12</item>
        <item name="android:paddingEnd">@dimen/dimen12</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/black_secondary</item>
    </style>

    <style name="CardTheme" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_marginStart">@dimen/start_margin</item>
        <item name="android:layout_marginEnd">@dimen/end_margin</item>
        <item name="cardCornerRadius">@dimen/dimen12</item>
        <item name="android:layout_marginTop">@dimen/end_margin</item>
        <item name="android:layout_marginBottom">@dimen/end_margin</item>
    </style>
</resources>